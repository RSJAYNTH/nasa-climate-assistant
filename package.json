{
  "name": "nasa-climate-assistant",
  "version": "1.0.0",
  "description": "NASA Climate Intelligence Assistant - Full Stack Web Application",
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "start:backend": "cd backend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "nasa",
    "climate",
    "api",
    "weather",
    "agriculture",
    "solar",
    "risk"
  ],
  "author": "NASA SpaceApps Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "node-cache": "^5.1.2"
  }
}
